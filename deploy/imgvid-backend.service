[Unit]
Description=Img2Vid Flask Backend Service
After=network.target

[Service]
User=www-data
WorkingDirectory=/opt/img2vid-backend/current
Environment="PATH=/opt/img2vid-backend/venv/bin"

ExecStart=/opt/img2vid-backend/venv/bin/gunicorn \
  --workers 3 \
  --bind 0.0.0.0:8080 \
  app:app

Restart=always

[Install]
WantedBy=multi-user.target
